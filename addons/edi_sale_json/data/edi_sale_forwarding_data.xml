<?xml version="1.0"?>
<odoo>
  <data>

    <!-- Create "EDI Sale Order Forward Document" sequence -->
    <record id="sale_forward_sequence_default" model="ir.sequence">
      <field name="name">EDI Sale Orde Forward Document</field>
      <field name="prefix">SFWD</field>
      <field name="padding" eval="5"/>
    </record>


    <!-- EDI sale order forward record type -->
    <record id="sale_forward_record_type" model="edi.record.type">
      <field name="name">Sale Order Forward</field>
      <field name="model_id" ref="model_edi_sale_forward_record"/>
      <field name="sequence" eval="435"/>
    </record>

    <!-- EDI sale order line forward record type -->
    <record id="sale_line_forward_record_type" model="edi.record.type">
      <field name="name">Sale Order Line Forward</field>
      <field name="model_id" ref="model_edi_sale_line_forward_record"/>
      <field name="sequence" eval="440"/>
    </record>

    <!-- EDI sale order forward document type -->
    <record id="sale_forward_document_type" model="edi.document.type">
      <field name="name">Sale Order Forward</field>
      <field name="model_id" ref="model_edi_sale_forward_document"/>
      <field name="sequence" eval="430"/>
      <field name="sequence_id" ref="sale_forward_sequence_default"/>
      <field name="rec_type_ids" eval="[(6, False, [ref('sale_forward_record_type'),
        ref('sale_line_forward_record_type')])]"/>
      <field name="sale_report" eval="True"/>
    </record>

  </data>
</odoo>
