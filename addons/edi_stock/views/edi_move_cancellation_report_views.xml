<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Stock Cancellation EDI records field -->
        <record id="edi_stock_cancellation_document_form" model="ir.ui.view">
            <field name="name">edi.document.stock.cancellation.form</field>
            <field name="model">edi.document</field>
            <field name="inherit_id" ref="edi.document_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook[@name='records']" position="inside">
                    <page name="movements" string="Stock Cancellations" attrs="{'invisible':['|', ('prepare_date','=',False),
                                     '!', ('rec_type_names','ilike','/edi.record.stock.cancellation/')]}">
                        <field name="move_cancellation_ids" readonly="1">
                            <tree>
                                <field name="order_reference" />
                                <field name="customer_id" />
                                <field name="email_template_id" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
